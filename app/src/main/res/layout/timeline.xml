<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.k3ntaroo.koruri.TimelineActivity"
    android:orientation="vertical" >

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <ListView
        android:id="@+id/post_in_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="4pt"
        android:layout_gravity="bottom" >

        <EditText
            android:id="@+id/timeline_tweet_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Tweet" />
        <Button
            android:id="@+id/timeline_tweet_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tweet"/>
    </LinearLayout>
</LinearLayout>
